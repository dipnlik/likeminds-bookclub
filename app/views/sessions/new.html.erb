<% if flash[:alert] %>
  <p id='alert'><%= flash[:alert] %></p>
<% end %>

<%= form_tag do %>
  <div class="field">
    <%= label_tag :username %><br />
    <%= text_field_tag :username %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag 'Log In' %>
    or <%= link_to 'Sign up', new_user_path %>
  </div>
<% end %>
